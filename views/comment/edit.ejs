<% include ../partials/header %>

  <div class="container">
    <div class="row">
      <h1 style="text-align: center">Edit Comment
      </h1>
      <div style="width: 30%; margin: 25px auto;">
        <form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id%>?_method=PUT" method="POST">
          <div class="form-group">
            <textarea maxlength="60" rows="2" style="resize: none" class="form-control" type="text" name="comment[text]"><%= comment.text %></textarea>
          </div>

          <div class="form-group">
            <input class="btn btn-lg btn-primary btn-block" type="submit">
          </div>
        </form>
        <a href="/campgrounds">Go back to campgrounds</a>
      </div>


    </div>

  </div>


  <script src="https://code.jquery.com/jquery-2.1.3.min.js"></script>
  <script>
    $('textarea').each(function () {
      this.setAttribute('style', 'height:' + (this.scrollHeight) + 'px;line-height: 1.5;overflow-y:hidden;resize: none');
    }).on('input', function () {
      this.style.height = 'auto';
      this.style.height = (this.scrollHeight) + 'px';
    });
  </script>
  <% include ../partials/footer %>