<% include ../partials/header %>
  <style>
    .card {
      /* Add shadows to create the "card" effect */
      box-shadow: 5px 4px 6px 0 rgba(0, 0, 0, 0.2);
      transition: 0.3s;
      border-radius: 20px;
      font-family: arial;
    }

    /* On mouse-over, add a deeper shadow */

    .card:hover {
      box-shadow: 10px 8px 16px rgba(0, 0, 0, 0.2);
    }

    /* Add some padding inside the card container */

    .container {
      padding: 2px 16px;
    }
  </style>
  <div class="container">

    <div class="row">

      <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3">
        <div class="thumbnail card">
          <img src="<%=user.avatar%>" alt="User Profile Picture" style="border:0px solid black; border-radius: 20px;">
        </div>
        <div class="caption">
          <h2 style="font-weight: 100; text-transform: capitalize">
            <%= user.firstName + " " +user.lastName%>
          </h2>
          <h3 style="color:gray;font-weight: 100; margin-top: 0">
            <%= user.username%>
          </h3>
          <p>
            <a style="text-decoration: none">
              <%=user.email%>
            </a>
          </p>
        </div>
        <p>
          <%=user.bio%>
        </p>
        <%  if(currentUser && user.username == currentUser.username){ %>
          <button type="button" class="btn btn-default" style="width: 100%">Edit Bio</button>
          <% } %>
            <hr>
      </div>

      <div class="col-xs-9 col-sm-9 col-md-9 col-lg-9">
        <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
          <p class="lead">Campgrounds by
            <%= user.username%> :
          </p>

          <div class="list-group" style="margin-bottom: 0px">
            <ol type="1">
              <% campgrounds.forEach(function(campground){ %>
                <li>
                  <a href="/campgrounds/<%=campground.id%>" class="list-group-item">
                    <%= campground.name %>
                  </a>
                </li>
                <% }) %>

            </ol>
          </div>

        </div>

        <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">

        </div>

        <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
        </div>
      </div>
    </div>
  </div>

  <% include ../partials/footer %>