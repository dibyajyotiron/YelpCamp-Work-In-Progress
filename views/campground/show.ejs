<% include ../partials/header %>
    <div class="container">
        <div class="row">
            <div class="col-md-3">
                <p class="lead">YelpCamp
                </p>
                <div class="list-group">
                    <li class="list-group-item active">Category 1</li>
                    <li class="list-group-item">Category 2</li>
                    <li class="list-group-item">Category 3</li>
                </div>
                <div class="list-group">
                    <a class="list-group-item" href="/campgrounds">Back to all Campgrounds</a>
                </div>
            </div>
            <div class="col-md-9">
                <div class="thumbnail">
                    <img class="img-responsive" src="<%=campground.image%>" alt="camp">
                    <div class="caption-full">
                        <h4 class="pull-right">$
                            <%= campground.cost %>/night</h4>
                        <h4>
                            <a href="#">
                                <%= campground.name %>
                            </a>
                        </h4>
                        <p>
                            <%= campground.description%>
                        </p>
                        <p>
                            Submitted By
                            <em>
                                <%= campground.author.username%>
                            </em>
                        </p>
                        <% if(currentUser && campground.author.id.equals(currentUser._id)){  %>
                            <a class="btn btn-sm btn-info" href="/campgrounds/<%= campground._id%>/edit">Edit</a>
                            <form id="delete-form" action="/campgrounds/<%=campground._id%>?_method=DELETE" method="POST">
                                <button class="btn btn-sm btn-danger">Delete</button>
                            </form>
                            <% } %>
                    </div>

                </div>
                <div class="well">
                    <div class="text-right">
                        <a class="btn btn-sm btn-success" href="/campgrounds/<%=campground._id%>/comments/new">Add new comment</a>
                    </div>
                    <hr>
                    <% campground.comments.forEach(function(comment){ %>
                        <div class="row">
                            <div class="col-md-12">
                                <strong>
                                    <%= comment.author.username %>
                                </strong>
                                <span class="pull-right">
                                    <%= moment(comment.createdAt).fromNow() %>
                                </span>
                                <p>
                                    <%= comment.text %>
                                </p>
                                <% if(currentUser && comment.author.id.equals(currentUser._id)){  %>
                                    <a class="btn btn-xs btn-info" href="/campgrounds/<%=campground._id%>/comments/<%=comment._id%>/edit">Edit</a>
                                    <form id="delete-form" action="/campgrounds/<%=campground._id%>/comments/<%=comment._id%>?_method=DELETE" method="POST">
                                        <input type="submit" class="btn btn-xs btn-danger" value="Delete">
                                    </form>
                                    <% } %>
                            </div>
                        </div>

                        <%    }) %>
                </div>
            </div>
        </div>



    </div>


    <% include ../partials/footer %>