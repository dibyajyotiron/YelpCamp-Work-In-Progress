<% include ../partials/header %>


    <div class="container promo">

        <header class="jumbotron extra-jumbotron">
            <div class="container">
                <h1>
                    <span class="glyphicon glyphicon-tent"></span> Welcome to YelpCamp!</h1>
                <p>View our campgrounds from all over the world</p>
                <p>
                    <a class="btn btn-info btn-lg" href="/campgrounds/new">Add a campground</a>
                </p>

            </div>
        </header>





        <div class="row text-center" style="display: flex; flex-wrap: wrap;">
            <!--<div class="col-lg-12">-->
            <!--<h3>Our most popular Campgrounds</h3>-->
            <% camps.forEach(function(camp){ %>
                <div class="col-md-3 col-sm-4 col-xs-12">
                    <div class="thumbnail same">
                        <img id="same-img" src="<%= camp.image%>">
                        <div class="caption">
                            <h4>
                                <%= camp.name %>
                            </h4>
                        </div>
                        <p>
                            <a href="/campgrounds/<%= camp._id%>" class="btn btn-info">More Info
                                <i class="fas fa-info-circle"></i>
                            </a>
                        </p>
                    </div>
                </div>
                <% }) %>
                    <!--</div>-->
        </div>
    </div>
    </div>
    <% include ../partials/footer %>