<% include ../partials/header %>

  <div class="container">
    <div class="row">
      <h1 style="text-align: center">Edit
        <%= campground.name %>
      </h1>
      <div style="width: 40%; margin: 25px auto;">
        <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
          <div class="form-group">
            <label for="name">Campground Name</label>
            <input class="form-control" type="text" id="name" name="camp[name]" value="<%=campground.name%>">
          </div>
          <div class="form-group">
            <label for="image">Image</label>
            <input class="form-control" type="text" name="camp[image]" id="image" value="<%= campground.image%>">
          </div>
          <div class="form-group">
            <label for="cost">Cost</label>
            <input class="form-control" type="number" name="camp[cost]" id="cost" value="<%= campground.cost %>" step="0.01" min="0"
              required>
          </div>
          <div class="form-group">
            <label for="description">Description</label>
            <textarea class="form-control" type="text" id="description" name="camp[description]">
              <%= campground.description%>
            </textarea>
          </div>
          <div class="form-group">
            <label for="location">Location</label>
            <input class="form-control" type="text" name="camp[location]" id="location" value="<%= campground.location %>">
          </div>
          <div class="form-group">
            <input class="btn btn-lg btn-primary btn-block" type="submit">
          </div>
        </form>
        <a href="/campgrounds">Go back to campgrounds</a>
      </div>
    </div>
  </div>


  <script src="https://code.jquery.com/jquery-2.1.3.min.js"></script>
  <script>
    $('textarea').each(function () {
      this.setAttribute('style', 'height:' + (this.scrollHeight) + 'px;line-height: 1.5;overflow-y:hidden;resize: none');
    }).on('input', function () {
      this.style.height = 'auto';
      this.style.height = (this.scrollHeight) + 'px';
    });
  </script>
  <% include ../partials/footer %>