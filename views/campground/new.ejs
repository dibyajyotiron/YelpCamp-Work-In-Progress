<% include ../partials/header %>

    <div class="container">
        <div class="row">
            <h1 style="text-align: center">Create a new Campground</h1>
            <div style="width: 30%; margin: 25px auto;">
                <form action="/campgrounds" method="POST">
                    <div class="form-group">
                        <label for="name">Campground Name</label>
                        <input class="form-control" type="text" id="name" name="name" placeholder="Campground name">
                    </div>
                    <div class="form-group">
                        <label for="image">Image</label>
                        <input class="form-control" id="image" type="text" name="image" placeholder="Image url">
                    </div>
                    <div class="form-group">
                        <label for="cost">Cost</label>
                        <input class="form-control" type="number" name="cost" id="cost" placeholder="9.99" step="0.01" min="0" required>
                    </div>
                    <div class="form-group">
                        <label for="description">Campground Description</label>
                        <input class="form-control" type="text" id="description" name="description" placeholder="Description">
                    </div>
                    <div class="form-group">
                        <input class="btn btn-lg btn-primary btn-block" type="submit">
                    </div>
                </form>
                <a href="/campgrounds">Go back to campgrounds</a>
            </div>


        </div>

    </div>



    <% include ../partials/footer %>